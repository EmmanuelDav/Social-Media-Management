<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tw__composer_white">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/spalsh_icon"
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:src="@drawable/spashi" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/explain_header1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spalsh_icon"
        android:layout_margin="20dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:singleLine="true"
            android:text="Share Post To All Your"
            android:textAllCaps="false"
            android:textAppearance="?textAppearanceHeadline5"
            android:textColor="?colorOnSurface" />

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/spalsh_icon"
            android:gravity="center_horizontal"
            android:text="Social Media"
            android:textAllCaps="false"
            android:textAppearance="?textAppearanceHeadline5"
            android:textColor="?colorOnSurface" />

    </androidx.appcompat.widget.LinearLayoutCompat>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/explain_header1"
        android:layout_margin="10dp"
        android:gravity="center_horizontal"
        android:text="Manage Me is An application \n that Brings all your social Media Handles \n in a single app"
        android:textAppearance="?textAppearanceBody2" />



</RelativeLayout>